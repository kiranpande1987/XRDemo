<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XRDemo" x:Class="XRDemo.MainPage">
    <StackLayout Margin="10, 35, 10, 0">
        <StackLayout Orientation="Horizontal">
            <ImageButton x:Name="imgBack" HeightRequest="25" WidthRequest="25" Source="back.png" />
            <Label Text="Xamarin Demos" FontSize="Large" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
        <ListView x:Name="listViewDemo" ItemSelected="OnListViewItemSelected" ItemTapped="OnListViewItemTappedAsync">
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Basic UI Demo</x:String>
                    <x:String>WebService Demo</x:String>
                    <x:String>Database Demo</x:String>
                    <x:String>Notification Demo</x:String>
                    <x:String>CPP Demo</x:String>
                </x:Array>
            </ListView.ItemsSource>
        </ListView>
    </StackLayout>
</ContentPage>