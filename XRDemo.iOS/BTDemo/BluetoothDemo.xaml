<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XRDemo.iOS.BTDemo.BluetoothDemo">
    <ContentPage.Content>
        <StackLayout Margin="10, 35, 10, 0">
        <StackLayout Orientation="Horizontal">
            <ImageButton x:Name="imgBack" HeightRequest="25" WidthRequest="25" Source="back.png" />
            <Label Text="Bluetooth Demo (iOS)" TextColor="Black" FontSize="Large" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Button x:Name="btnBTON" Text="BT ON" HorizontalOptions="FillAndExpand"/>
                <Button x:Name="btnBTOFF" Text="BT OFF" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Button x:Name="btnBTScan" Text="Scan" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
